{
  "manifest_version": 3,
  "name": "AI Summarizer & Chatbot",
  "version": "1.0",
  "description": "Summarize pages via Python backend",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
